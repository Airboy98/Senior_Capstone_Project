#############################################################################
<AddItemScreen>:

    FloatLayout:
        StandardButton:
            text: "Back to Inventory"
            pos_hint: {"top": .9}
            on_press:
                app.root.transition.direction = "down"
                app.root.current = "inventory_screen"

        HeaderButton:
            text: "Add Item"
            pos_hint: {"center_x": .5, "top": 1}

        TextInput:
            id: barcode_number
            hint_text: "Scan or Enter Barcode Number"
            write_tab: False
            multiline: False
            pos_hint: {"center_x": .4, "top": .6}
            size_hint: .4,.05

        Button:
            text: "Search"
            pos_hint: {"center_x": .7, "top": .6}
            size_hint: .2,.05
            on_press:
                root.search_item(barcode_number)

        Button:
            text: "Enter Expiration Date (optional)"
            pos_hint: {"center_x": .5, "top": .55}
            size_hint: .6,.05

        TextInput:
            id: month
            hint_text: '2 Digits for Month'
            write_tab: False
            multiline: False
            pos_hint: {"center_x": .3, "top": .5}
            size_hint: .2,.05

        TextInput:
            id: day
            hint_text: '2 Digits for Day'
            write_tab: False
            multiline: False
            pos_hint: {"center_x": .5, "top": .5}
            size_hint: .2,.05

        TextInput:
            id: year
            hint_text: '4 Digits for Year'
            write_tab: False
            multiline: False
            pos_hint: {"center_x": .7, "top": .5}
            size_hint: .2,.05





        MiniButton:
            text: "Submit"
            pos_hint: {"center_x": .2 , "center_y": .1}

        MiniButton:
            text: "Other"
            pos_hint: {"center_x": .33, "center_y": .1}

        MiniButton:
            text: "Cancel"
            pos_hint: {"center_x": .46, "center_y": .1}
            on_press:
                app.root.transition.direction = "down"
                app.root.current = "inventory_screen"



